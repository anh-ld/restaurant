{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "amd",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "Atom/*": ["src/atom/*"],
      "Action/*": ["src/actions/*"],
      "Reducer/*": ["src/reducer/*"],
      "Type/*": ["src/types/*"],
      "Util/*": ["src/utils/*"],
      "Asset/*": ["src/assets/*"],
      "Config/*": ["src/config/*"]
    },
    "resolveJsonModule": true,
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./src/types"
  ]
}